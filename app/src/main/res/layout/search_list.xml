<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/each_songItem"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/ui_whilt"
        android:clickable="true"
        android:elevation="3dp"
        android:focusable="true"
        android:orientation="horizontal">

        <com.ikunkun.kunmusic.tools.XCRoundImageView
            android:id="@+id/mzListCover"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="19"
            android:src="@drawable/default_ava" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mzListName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="境界線"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/mzListSinger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="66666"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="19">

            <ImageView
                android:id="@+id/mzListDownload"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/more" />
        </LinearLayout>
    </LinearLayout>




</RelativeLayout>