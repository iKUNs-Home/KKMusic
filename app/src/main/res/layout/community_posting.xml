<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ui_main_shapemine"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PostingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ui_second_shape"
        android:orientation="vertical">
        <EditText
            android:id="@+id/posting_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:hint="分享你的看法！"
            android:gravity="top"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/textshape"
            android:textColor="#393939" />
        <Button
            android:id="@+id/posting_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:layout_marginTop="20dp"
            android:text="发布"
            android:textColor="#ffffff"
            android:textSize="15dp"/>

    </LinearLayout>

</LinearLayout>